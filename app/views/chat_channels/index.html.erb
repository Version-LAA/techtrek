<div class="messaging">
  <div class="chat-container">
  <h2 class="message-header">Private Messages</h2>
    <div class="channels ">
    <%@channels.each do |channel|%>
      <div class="row">

        <%= link_to(chat_channel_path(channel), class: "chat-channels") do %>
          <%userphoto_attribute = if channel.user1_id == current_user.id%>
            <%userphoto = :user2_id%>
          <%else%>
            <%userphoto = :user1_id%>
          <%end%>
          <% userphoto = channel.send(userphoto_attribute) %>
          <%= cl_image_tag(User.find(userphoto).photo.key,
                            height: 60,
                            width: 60,
                            crop: :scale,
                            aspect_ratio: "4:3",
                            radius: "50",
                            class: "my-image") %>
          <%if Message.where(chat_channel_id:channel).exists?%>
          <%end%>
            <p class="message-content m-4"><%= Faker::Lorem.sentence(word_count: rand(1..12)) %></p>
        <% end %>
      </div>
      <%end%>
    </div>
  </div>
</div>
