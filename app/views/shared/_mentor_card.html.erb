<div class = "row whole">
  <% mentors.each do |mentor| %>
    <div class="card m-5 mentor_card" style="width: 18rem;">
      <p class="mt-3 mb-3"><strong><%= "#{mentor.first_name} #{mentor.last_name}"%></strong><%="- #{mentor.title.titleize}"%></p>
      <div class="">
        <%=cl_image_tag(mentor.photo.key,
            height: 150,
            width: 200,
            crop: :scale,
            aspect_ratio: "4:3",
            class: "pic",
            radius: 10
            )%>
      </div>
      <div class="card-body">
        <%=link_to "View Profile",mentor_path(mentor),class:"btn btn-profile"%>
        <%=link_to image_tag("chat.png", width: "20%"),mentor_path(mentor),class:"btn-link chat"%>
      </div>
    </div>
  <% end %>
  </div>
