<div class="container-main">
  <div class="d-flex flex-row">
    <div class="">
      <%=cl_image_tag(profilePhoto,
        height: 285,
        width: 290,
        crop: :fill,
        aspect_ratio: "4:3",
        radius: "max",
        background: "#B1D7B4"
        )%>
    </div>
    <div class="profile-info">
      <h1><%= "#{userFirstName} #{userLastName} " %></h1>
      <p class="mt-3 title"><%= "#{user_title}"%></p>
      <p><i class="fa-solid fa-location-pin"></i> <%="#{userLocation}"%></p>
      <div class="d-flex flex-row">
        <%if current_page?(!my_profile_path)%>
          <div class="model1">
            <button type="button" id="chat-btn" class="btn profile-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
              Meet
            </button>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Which skill can this mentor help you with?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <%skills.each do |s|%>
                      <%=link_to "#{s.technology.name.titleize}",new_specialty_consultation_path(s),class:"btn"%>
                    <%end%>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="model2">
            <button type="button" class="btn profile-btn" data-bs-toggle="modal" data-bs-target="#chatModal">
              Chat
            </button>
            <div class="modal fade" id="chatModal" tabindex="-1" aria-labelledby="chatModalLabel" aria-hidden="true" >
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="chatModalLabel">Send a message to <%="#{userFirstName}"%></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <%= simple_form_for [@chat_channel,@message] do |f|%>
                      <%= f.fields_for :chat_channel do |cc| %>
                        <%= cc.input :name,
                          label: false,
                          placeholder: "Message Subject",
                          wrapper_html: { class: "flex-grow-1" } %>
                      <% end %>
                      <%= f.input :content,
                        label: false,
                        placeholder: "Message #",
                        wrapper_html: {class: "flex-grow-1"}
                      %>
                      <div class="d-flex justify-content-end">
                      <%= f.submit "Send", class: "btn btn-secondary mx-3" %>
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      </div>
                    <% end %>

                  </div>
                </div>
              </div>
            </div>

          </div>

        <%else%>
          <%=link_to "Edit",root_path,class:"btn profile-btn"%>
        <%end%>


      </div>
    </div>
    <div class="about-me">
      <p>Meet <%="#{userFirstName}"%></p>
      <div class="quote">
        <p>Hi! I'm <%="#{userFirstName}"%></p>
        <p><%="#{user}"%></p>
      </div>
      <div class="d-flex justify-content-around icons">
        <i class="fa-brands fa-linkedin"></i>
        <i class="fa-brands fa-github"></i>
        <i class="fa-brands fa-bitbucket"></i>
      </div>
    </div>

  </div>

</div>

<div class="d-flex flex-row ">
  <div class="skills-container">
    <p class="justify-content-start"><strong>Skills</strong></p>
    <%skills.each do |skill|%>
      <div class="skill-text mb-3">
        <%=skill.technology.name.titleize%>
        <%skill.skill_level.times do |level|%>
            <span class="stars">‚≠êÔ∏è</span>
        <%end%>
      </div>
    <%end%>
  </div>
  <div class="profile-body">
    <div class="work">
      <p style="font-size:35px"><strong>üíº Work Experience</strong></p>
      <div>
        <%experiences.each do |e|%>
          <div class="work-exp">
            <p><span class="logo">üñ•</span> <%="#{e.position_title} #{e.company_name} #{e.start_date} - #{e.end_date} "%></p>
          </div>
        <%end%>
      </div>
    </div>
    <br>
    <hr class="line">
    <br>

    <div class="education">
      <p style="font-size:35px"><strong>üìö Education</strong></p>
        <%education.each do |edu|%>
          <div class="work-exp">
          <p><%="üìì #{edu.institution_name} #{edu.degree_type} #{edu.start_date} - Present"%>
          </div>
        <%end%>


    </div>

  </div>

</div>
