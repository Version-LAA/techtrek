<div class = "container text-center cont-assessment">

    <%if Technology.where(name: params[:query]).exists?%>
        <h1 class = "title1">Discover a <%=params[:query].titleize%> mentor!</h1>
      <%else%>
        <h1 class = "title1">Discover a mentor!</h1>
    <%end%>

  <p class = "speciality-text"><%=@statement%></p>
   <div class="search-box">
  <%= form_with url: specialties_path, method: :get do %>
        <button class="btn-search"type = "submit"><i class="fas fa-search"></i></button>
        <%= text_field_tag :query,
              params[:query],
              class: "input-search",
              placeholder: "Type to Search..."
          %>
  <% end %>
</div>
  <%=render "shared/mentor_card" ,mentors: @mentors %>
</div>
